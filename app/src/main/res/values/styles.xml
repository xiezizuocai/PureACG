<resources>

    <!-- Base application theme. -->
    <!-- 将APP的主题设置为NoActionBar，以便于对状态栏进行某些操作 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 列表分割线 -->
        <item name="android:listDivider">@drawable/list_divider</item>
        <!-- 状态栏底色 -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Blue">
        <!-- colorPrimary（原色）：它作为应用的主要色调，一般是操作栏和最近任务的背景色 -->
        <item name="colorPrimary">@color/material_blue</item>
        <!-- color Primary Dark（色原变暗）：原色的变暗色调，应用在状态栏上 -->
        <item name="colorPrimaryDark">@color/material_blue</item>
        <!-- colorAccent（色彩突显）：它是原色的强调色彩，应用在框架控制上 -->
        <item name="colorAccent">@color/material_blue</item>
    </style>

    <style name="AppTheme.LightBlue">
        <item name="colorPrimary">@color/material_light_blue</item>
        <item name="colorPrimaryDark">@color/material_light_blue</item>
        <item name="colorAccent">@color/material_light_blue</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/material_red</item>
        <item name="colorPrimaryDark">@color/material_red</item>
        <item name="colorAccent">@color/material_red</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimary">@color/material_purple</item>
        <item name="colorPrimaryDark">@color/material_purple</item>
        <item name="colorAccent">@color/material_purple</item>
    </style>

    <style name="AppTheme.DeepPurple">
        <item name="colorPrimary">@color/material_deep_purple</item>
        <item name="colorPrimaryDark">@color/material_deep_purple</item>
        <item name="colorAccent">@color/material_deep_purple</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">@color/material_teal</item>
        <item name="colorPrimaryDark">@color/material_teal</item>
        <item name="colorAccent">@color/material_teal</item>
    </style>

    <style name="AppTheme.DeepOrange">
        <item name="colorPrimary">@color/material_deep_orange</item>
        <item name="colorPrimaryDark">@color/material_deep_orange</item>
